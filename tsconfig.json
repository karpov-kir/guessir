{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@guessir/shared/dist/*": ["./packages/shared/src/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "**/jest.config.ts"
  ]
}
